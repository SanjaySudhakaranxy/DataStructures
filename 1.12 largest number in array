#include<stdio.h>
int main()
{
  printf("largest number in array\n");
  printf("Sanjay S, 192321004\n");
  int n;
  printf("enter the number of element : \n");
  scanf("%d",&n);
  int arr[n];
  printf("enter %d elements : \n");
  for(int i=0;i<n;i++)
  {
      scanf("%d",&arr[i]);
  }
  int max=arr[0],i;
  for(i=0;i<n;i++)
  {
    if(arr[i]>max)
      max=arr[i];
  }
  printf("largest number in array : %d",max);
}
